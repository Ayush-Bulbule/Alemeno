generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id             Int      @id @default(autoincrement())
  customer_id    Int
  first_name     String
  last_name      String
  age            Int
  phone_number   String
  monthly_salary BigInt
  approved_limit BigInt
  current_debt   BigInt
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Loan {
  id              Int      @id @default(autoincrement())
  loan_id         Int
  customer_id     Int
  loan_amount     BigInt
  tenure          Int
  interest_rate   Int
  monthly_payment Int
  emi_paid        Int
  approval_date   DateTime
  end_date        DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
